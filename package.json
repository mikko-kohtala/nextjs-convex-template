{
  "name": "acme-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "initialize": "pnpm install && tsx scripts/initialize.ts",
    "dev": "pnpm install && turbo dev",
    "dev:web": "turbo build --filter=@acme/database && turbo dev --filter=@acme/nextjs",
    "build": "turbo build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck",
    "check": "turbo check",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "chalk": "5.6.2",
    "tsx": "4.20.6",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "ultracite": "5.6.2",
    "zx": "8.8.4"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=22"
  }
}
